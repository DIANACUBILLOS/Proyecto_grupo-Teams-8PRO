<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="@android:color/primary_text_dark">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imv_item_producto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ai">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tev_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20dp">

        </TextView>
        <TextView

            android:id="@+id/tev_item_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="20dp">

        </TextView>
        <TextView

            android:id="@+id/tev_item_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="20dp">

        </TextView>
        <Button
            android:id="@+id/btn_item_favorito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favoritos">

        </Button>
        <Button
            android:id="@+id/btn_item_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrito">

        </Button>
        <Button
            android:id="@+id/btn_item_borrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Borrar">

        </Button>


    </LinearLayout>



</LinearLayout>