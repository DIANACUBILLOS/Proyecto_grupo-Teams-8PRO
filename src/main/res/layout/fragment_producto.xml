<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoFragment"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_producto_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre">
            </EditText>

            <EditText
                android:id="@+id/edt_producto_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Categoria">
            </EditText>

            <EditText
                android:id="@+id/edt_producto_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio"
                android:inputType="number">
            </EditText>

            <CheckBox
                android:id="@+id/chb_producto_enstock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Esta disponible?">
            </CheckBox>

            <Button
                android:id="@+id/btn_producto_seleccionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar imagen">

            </Button>

            <Button
                android:id="@+id/btn_producto_subir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir imagen">

            </Button>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imv_producto_imagen"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/default_image">

            </ImageView>

            <Button
                android:id="@+id/btn_producto_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar producto">

            </Button>
        </LinearLayout>


    </ScrollView>



</LinearLayout>